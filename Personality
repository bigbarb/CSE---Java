import java.util.*;
import java.io.*;

public class Personality {

    //Keirsey test personality dimensions
    public static final int DIMENSIONS = 4;

    public static void main(String[]args) throws FileNotFoundException {
       Scanner console = new Scanner(System.in);
       intro();
       System.out.print("input file name? ");
       File file = new File(console.nextLine());
       Scanner inputFile = new Scanner(file);

       System.out.print("output file name? ");
       File out = new File(console.nextLine());
       PrintStream output = new PrintStream(out);

       while (inputFile.hasNextLine()) {
           String identification = inputFile.nextLine();
           output.println(identification + ": ");
           String responses = inputFile.nextLine();
           int[] countB = countAB(responses, 'B');
           int[] countA = countAB(responses, 'A');
       }
    }

    // prints introduction for program
    public static void intro() {
        System.out.println("This program processes a file of answers to the");
        System.out.println("Keirsey Temperament Sorter. It converts the");
        System.out.println("various A and B answers for each person into");
        System.out.println("a sequence of B-percentages and then into a");
        System.out.println("four-letter personality type.");
        System.out.println();
    }

    //Counts A and B responses for the single user based off the 70char responses
    //parameters:
    //  String responses: respones calculated for the characters
    //  char target: 4 of each
    public static int[] countAB (String responses, char target) {
        int[] countAB = new int[4];
         for (int i = 0; i < 70; i++) {
             if (responses.charAt(i) == target) {
                 countAB[((i % 7) + 1) / 2] ++; 
                }
            }
         return countAB;
    }




}
